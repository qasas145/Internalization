@model CreateVM;
@inject IViewLocalizer _localizer;
<form>
  <div class="form-group">
    <label asp-for="Name"></label>
    <input type="text" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Enter email" asp-for="Name">
    <small id="nameHelp" class="form-text text-muted">the name will be displayed</small>
  </div>
  <button type="submit" class="btn btn-primary">@_localizer["Save"]</button>
</form>